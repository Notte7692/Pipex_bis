{
    "version": "0.2.0",
    "configurations": [
        {
            "name" : "pipex", 
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/pipex",
            "stopAtEntry": true,
            "args": [
                "/dev/stdin",
                "cat"
                "ls",
                "/dev/stdout"
            ],
            "cwd": "${workspaceRoot}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb"
          }
    ]
}